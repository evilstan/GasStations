<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/recycler_item_style"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/brand"
      style="@style/recycler_item_brand_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/station_address"
      style="@style/recycler_item_details_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/fuel_type"
      style="@style/recycler_item_details_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/fuel_volume"
      style="@style/recycler_item_details_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/fuel_price"
      style="@style/recycler_item_details_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

</androidx.cardview.widget.CardView>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GasStations" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="recycler_list_item_style" parent="android:TextAppearance">
        <item name="singleLine">false</item>
    </style>

    <style name="recycler_item_brand_style" parent="recycler_list_item_style">

    </style>

    <style name="recycler_item_details_style" parent="recycler_list_item_style">

    </style>

    <style name="recycler_style" parent="recycler_list_item_style">
        <item name="android:layout_margin">@dimen/recycler_margin</item>
    </style>

    <style name="floating_action_button_style">
        <item name="android:layout_marginEnd">@dimen/floating_action_button_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/floating_action_button_margin_bottom</item>

    </style>

    <style name="recycler_item_style" >
        <item name="android:layout_marginTop">@dimen/recycler_item_margin_vert</item>
        <item name="android:layout_marginBottom">@dimen/recycler_item_margin_vert</item>
    </style>

    <style name="aim_image_style" >
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/aim_icon</item>
    </style>

    <style name="aim_hint_style" parent="TextAppearance.AppCompat" >
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_spinner_text_style" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">@dimen/dialog_caption_text_size</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="dialog_caption_text_style" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">@dimen/dialog_caption_text_size</item>
    </style>

    <style name="dialog_main_text_style" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">@dimen/dialog_main_text_size</item>
        <item name="android:layout_margin">@dimen/dialog_main_text_margin</item>
    </style>

</resources>